<Window x:Class="VipeBus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VipeBus"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" MinHeight="600" MinWidth="900">
    <Grid>
        <Rectangle Width="432" Height="370" Fill="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <!-- Добавляем текстбоксы внутри прямоугольника -->
        <TextBox x:Name="UserLog" Height="30" Margin="371,0,371,0" VerticalAlignment="Center" />
        <TextBox x:Name="UserPas" Width="158" Height="30" Margin="0,354,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <!-- Добавляем кнопку внутри прямоугольника -->
        <Button Content="Войти" Width="196" Height="54" Margin="0,408,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Click="LoginButton_Click" />
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,246,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,328,0,0" VerticalAlignment="Top"/>
        <Label Content="Вход" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top" Height="54" Width="92" FontSize="36"/>

    </Grid>
</Window>
