<Window x:Class="VipeBus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VipeBus"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" MinHeight="600" MinWidth="900">
    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="111">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label FontSize="36" Grid.Column="1" Grid.Row="0" Content="Вход в систему" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="UserLog" Width="250" Height="20" Grid.Row="1" HorizontalAlignment="Center" Margin="25,0,25,0" Background="White"   />
            <PasswordBox x:Name="UserPas" Width="250" Height="20" Grid.Row="2" HorizontalAlignment="Center" Grid.Column="1" Margin="25,5,25,8" Grid.RowSpan="2" />
            <Button Content="Войти" Width="250" Height="20" Grid.Row="3" HorizontalAlignment="Center" Margin="0,31,0,-29" Click="LoginButton_Click"/>

        </Grid>
    </WrapPanel>
</Window>
