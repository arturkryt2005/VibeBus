<Window x:Class="VipeBus.NewRoute"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="NewRoute" Height="300" Width="300" MinHeight="300" MinWidth="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="FromComboBox" DisplayMemberPath="Name" Grid.Row="0" Margin="5" VerticalAlignment="Center" />
        <ComboBox x:Name="toComboBox" DisplayMemberPath="Name" Grid.Row="1" Margin="5" VerticalAlignment="Center"/>
        <DatePicker x:Name="departureDatePicker" Grid.Row="2" Margin="5" VerticalAlignment="Center"/>
        <xctk:TimePicker x:Name="departureTimePicker" Grid.Row="3" Margin="5" VerticalAlignment="Center"/>
        <DatePicker x:Name="arrivalDatePicker" Grid.Row="4" Margin="5" VerticalAlignment="Center"/>
        <xctk:TimePicker x:Name="arrivalTimePicker" Grid.Row="5" Margin="5" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Сохранить" Width="80" Height="25" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="80" Height="25" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
